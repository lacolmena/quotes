@import 'nib'

@import url('http://fonts.googleapis.com/css?family=Oxygen')
@import url('http://fonts.googleapis.com/css?family=Quattrocento')

global-reset()

main-color = #00688B
background-color = #E0EEEE

body
  font-family 'Quattrocento'
  background-color background-color
  color #000

header
  font-family 'Oxygen'
  padding 50px 10px
  color #fff
  font-size 100px
  text-align center

  background-color main-color
  border-bottom 1px solid darken(main-color, 30%)
  text-shadow 0px -1px 0px darken(main-color, 30%)

.container
  width 700px
  margin 50px auto
  overflow hidden

.main-content
  float left
  width 400px

  h2
    font-size 30px
    padding-bottom 10px
    border-bottom 2px solid main-color
  p
    margin-bottom 20px

.sidebar
  float left
  width 200px
  padding 0px 0px 0px 100px

  .widget

    border-radius 1px
    border 1px solid main-color
    margin-left 20px
    background-color #fff
    box-shadow inset 0px 0px 0px 3px rgba(main-color, 0.8), 0px 3px 0px -2px rgba(background-color, 0.1)

    h1
      font-family 'Oxygen'
      margin 13px 10px 4px
      padding-bottom 10px
      border-bottom 1px solid main-color
      border-radius 2px 2px 0px 0px
      margin-bottom 10px

    p
      font-family 'Oxygen'
      font-size 12px
      padding 0px 10px
      margin-bottom 10px

p
  line-height 1.8

footer
  width 500px
  margin 50px auto
  border-top 1px dotted #ccc
  padding-top 5px
  font-size 13px
  color #444