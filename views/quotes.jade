extends layout

block content

	h2 List of all quotes

	p
		- for(var q in quotes) {
			p
				a(href="/quote/" + encodeURIComponent(q))= quotes[q].text + " -- " + quotes[q].author

		- };

block sidebar
	.widget
		h1 Navigation
		p
			a(href="/") Show a random quote

		p
			a(href="/quote/new") Add a new quote
			
		p
			a(href="/quote/all") View all quotes